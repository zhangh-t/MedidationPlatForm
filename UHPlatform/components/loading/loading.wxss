/* components/loading.wxss */
.loading {
  position: fixed;
  display: flex;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  align-items: center;
  align-content: center;
}

.loading-box {
  border:  thin solid gainsboro;
  box-shadow:5px 5px 3px 0px #ddd;
  width: 200rpx;
  height: 200rpx;
  position: relative;
  display: flex;
  margin: 0 auto;
}

.loading-ball-container {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  align-items: center;
  align-content: center;
  margin: 0 auto;
}

.loading-ball {
  position: relative;
  margin: 0 auto;
  border:  thin solid gainsboro;
  border-radius: 20rpx;
  background-color: gainsboro;
  width : 8rpx;
  height : 8rpx;
}

.loading-ball-green {
  position: relative;
  margin: 0 auto;
  border:  thin solid #333;
  border-radius: 20rpx;
  background-color: #333;
  width : 8rpx;
  height : 8rpx;
}

.split {
  width : 35rpx;
}