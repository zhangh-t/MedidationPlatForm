/* pages/login/login.wxss */
button {
  font-size : 13px;
  width : 200px;
  background-color: #6778AB;
  border-radius: 0;
  color : white
}

button:active {
  background-color: #9AABDE
}

.split {
  height : 60px;
}

.split-10 {
  height : 10px;
}

.split-60 {
  height : 60px;
}

input {
  font-size:13px;
  border:  thin solid #cdcdcd;
  border-radius: 5px;
  padding-left: 5px;
}

.hinttext {
  font-size : 12px;
  padding-left:5px;
  padding-top:8px;
  color: rgba(160, 160, 160, 30)
}

.hintbtn {
  font-size : 12px;
  padding-left:5px;
  padding-top:1px;
  color: rgba(160, 160, 160, 30);
  width: fit-content;
  height: 30px;
  background-color: #ffffff;
  border: none;
}
.hintbtn::after {
  border: none;
}

.hintbtn:active {
  background-color: #ffffff
}

.hint {
  display:flex;
  flex-direction: row;
  justify-content:center;
  margin-top: 2px;
}

.hintimg {
  width:16px;
  height:16px;
  margin:0px;
  padding-top:8px;
}